div.col-md-1
div.col-md-10
    p Schedules
    table.table-bordered.table-striped.table-hover
        tbody
            tr
                th ID
                th Description
                th Schedule
                th Enable
                th Disable
                th Toggle
            tr(ng-repeat="outlet in outlets", ng-show="selectedTank")
                td {{outlet.id}}
                td {{outlet.description}}
                td {{outlet.pin}}
                td
                    button(ng-click="operateOutlet($index,'on')").btn On
                td
                    button(ng-click="operateOutlet($index,'off')").btn Off
                td
                    button(ng-click="operateOutlet($index,'toggle')").btn Toggle

    div.input-append
        input(type="text", id="scheduleName", name="scheduleName", placeholder="Description....", ng-model="scheduleName")
        input(type="text", id="scheduleLater", name="scheduleLaster", placeholder="Every day at 1:00 am", ng-model="scheduleLater")
        select(class="padding-top: 6px;", ng-model="scheduleItem")
            option(ng-repeat="item in allowedScheduleItems") {{item.name}}
        button.btn(id="savebtn", ng-click="saveSchedule()") Add
