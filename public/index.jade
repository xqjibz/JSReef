doctype html
html(lang="en")
    head
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(charset='utf8')
        base(href='/')
        title JS Tank controller
        script(src="libs/jquery/dist/jquery.js")
        link(rel='stylesheet', href='libs/bootstrap/dist/css/bootstrap.min.css')
        script(src="libs/bootstrap/dist/js/bootstrap.js")
        script(src="libs/angular/angular.js")
        script(src="libs/angular-route/angular-route.js")
        script(src="libs/underscore/underscore.js")
        script(src="libs/restangular/dist/restangular.js")
        script(src="js/services/shared-data.js")
        script(src="js/controllers/maincontroller.js")
        script(src="js/controllers/lightingcontroller.js")
        script(src="js/controllers/pumpscontroller.js")
        script(src="js/controllers/settingscontroller.js")
        script(src="js/controllers/outletscontroller.js")
        script(src="js/approutes.js")
        script(src="js/jsreef.js")

    body(ng-app="JSReefApp", ng-controller="MainController")
        nav(role="navigation").navbar.navbar-default
            div.container-fluid
                div#reef-nav.collapse.navbar-collapse

                    ul.nav.navbar-nav.navbar-left
                        li
                            a(href="/lighting") Lights
                        li
                            a(href="/pumps") Pumps
                        li
                            a(href="/settings") Settings
                        li
                            a(href="/outlets") Outlets
                        li.dropdown
                            a(href="#", class="dropdown-toggle", data-toggle="dropdown") Tanks

                                b.caret
                            ul.dropdown-menu
                                li(ng-repeat="tank in tanks")
                                    a(href="#", ng-click="selectedTankChange(tank._id)") {{tank._id}}


        div
            p Controlling: {{tankSelection}}

            select(ng-model="tankSelection", class="margin-top: 10px 0; vertical-align: middle;", ng-change="selectTankChange()")
                option(ng-repeat="tank in tanks") {{tank._id}}

        div(ng-view)

